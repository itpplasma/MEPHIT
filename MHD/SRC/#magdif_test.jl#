using PyPlot

nr = 10
nth = 11

rrange = linspace(0,1,nr)

r = zeros(nr*nth+1)
th = zeros(nr*nth+1)
r[1] = 0
th[1] = 0

for kr = 1:(nr-1)
    locrange = ((kr-1)*nth+2):(kr*nth+1)
    println(locrange)
    r[locrange] = rrange[kr+1]
    th[locrange] = linspace(0,2*pi,nth)
end

plot(r.*cos(th),r.*sin(th),"x")
