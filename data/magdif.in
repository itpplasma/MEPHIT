&scalars
   ! 0: None, 1: Err, 2: Warn, 3: Info, 4: Debug
   config%log_level = 4
   ! 0: single iteration, 1: direct iterations, 2: preconditioned iterations
   config%runmode = 2
   ! use non-resonant test case
   config%nonres = .false.
   ! average over quadrilaterals for non-resonant test case
   config%quad_avg = .true.
   ! 0: EPS paper profile, 1: parabolic profile, 2: EQDSK profile
   config%pres_prof = 2
   ! 0: only PS current, 1: rot B_0, 2: EQDSK profile
   config%curr_prof = 2
   ! 0: surface integral, 1: field line integral, 2: EQDSK profile
   config%q_prof = 1

   ! toroidal mode number of perturbation
   config%n = 2
   ! minimal absolute poloidal mode number
   config%m_min = 3
   ! maximal absolute poloidal mode number
   config%m_max = 11
   ! number of iteration steps
   config%niter = 20
   ! number of Ritz eigenvalues
   config%nritz = 30
   ! threshold for eigenvalues in preconditioner
   config%ritz_threshold = 0.5d0
   ! number of knots per poloidal loop
   config%nkpol = 200
   ! number of flux surfaces up to and counting LCFS (before refinement)
   config%nflux_unref = 100
   ! temperature on magnetic axis
   config%temp_max = 3.d3
   ! minimum temperature
   config%temp_min = 2d1
   ! density on magnetic axis
   config%dens_max = 5.d13
   ! minimum density
   config%dens_min = 2d11
   ! damping factor for resonances
   config%damp = 0d0
   ! meshdata file
   config%meshdata_file = 'mesh.dat'
   ! vacuum perturbation field
   config%Bn_vac_file = 'Bn_flux.dat'

   ! output vacuum perturbation field
   config%Bn_vacout_file = 'Bn_vac.dat'
   ! accumulated perturbation field from FEM
   config%Bn_file = 'Bn.dat'
   ! perturbation field from iterations
   config%Bn_diff_file = 'Bn_diff.dat'
   ! output file for flux variables
   config%fluxvar_file = 'fluxvar.dat'
   ! output file for equilibrium current
   config%j0phi_file = 'j0phi.dat'
   ! output file for pressure perturbation
   config%presn_file = 'presn.dat'
   ! output file for current perturbation
   config%currn_file = 'currn.dat'
   ! output file for eigenvectors
   config%eigvec_file = 'eigvec.dat'
   ! maximal number of eigenvectors to be saved
   config%max_eig_out = 10

   ! error threshold for magnetic field perturbation
   config%rel_err_Bn = 1d-7
   ! error threshold for current perturbation
   config%rel_err_currn = 1d-8
/
&arrays
   ! coefficients for sheet currents
   sheet_current_factor(3) = (-1d3, 0d0)
   sheet_current_factor(4) = (3d2, -3d2)
   sheet_current_factor(5) = (-1d2, 1d2)
   sheet_current_factor(6) = (-1d2, 1d2)
   sheet_current_factor(7) = (-1d2, 1d2)
/
