\begin_inset Formula 
\begin{align*}
q_{k} & =q_{k}^{1}+q_{k}^{2}+q_{k}^{3}
\end{align*}

\end_inset

where
\begin_inset Formula 
\begin{align}
q_{k}^{1} & =\frac{in}{|\nabla\psi|^{2}}\left(cp_{n}-\boldsymbol{j}_{0}^{\text{pol}}\cdot\boldsymbol{A}_{n}\right)l_{3}\boldsymbol{n}_{3}\cdot\nabla\psi
\end{align}

\end_inset

is evaluated on edge Nr.
 3 (mean value for 
\begin_inset Formula $p_{n}$
\end_inset

 there),
\begin_inset Formula 
\begin{equation}
q_{k}^{2}=\frac{B_{n(\ph)}}{B_{0(\ph)}}\left(c\frac{\Delta p_{0}}{\Delta\psi}-\frac{j_{0(\ph)}}{R}\right)
\end{equation}

\end_inset

is evaluated with constant values inside triangle 
\begin_inset Formula $k$
\end_inset

, and 
\begin_inset Formula 
\begin{equation}
q_{k}^{3}=-c\frac{\Delta p_{n}}{\Delta\psi}-\frac{j_{0(\ph)}}{\Delta\psi}l\boldsymbol{B}_{n}^{\text{pol}}\cdot\boldsymbol{n},
\end{equation}

\end_inset

is an average over edge 1 and 2 of triangle 
\begin_inset Formula $k$
\end_inset

.
\end_layout

\begin_layout Standard
In the usual notation:
\begin_inset Formula 
\begin{align}
A_{jk} & =\left(a_{j}+\frac{b_{j}}{2}\right)\delta_{(j-1)k}+\left(-a_{j}+\frac{b_{j}}{2}\right)\delta_{jk},
\end{align}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
a_{j} & =1\\
b_{j} & =-inS_{\Omega k}\frac{B_{0(\ph)}}{\Delta\psi}
